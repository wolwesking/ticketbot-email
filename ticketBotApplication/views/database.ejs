<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Ticket Dashboard - <%= title %></title>
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script
      defer
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    ></script>
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    ></script>
    <script
      defer
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
    ></script>
  </head>
  <body>
    <div id="data">
      <nav class="navbar navbar-expand navbar-light bg-light">
        <ul class="nav navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/" aria-current="page">Tickets</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/database">Database</a>
          </li>
        </ul>
      </nav>
      <div class="container">
        <div class="row justify-content-center align-items-center g-2 my-5">
          <div class="col">
            <button
              type="button"
              class="btn btn-primary"
              onclick="downloadDB()"
            >
              Download database
            </button>
          </div>
        </div>
      </div>
      <br />
      <div class="table-responsive px-5">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Id</th>
              <th scope="col">Subject</th>
              <th scope="col">Name</th>
              <th scope="col">Date</th>
              <th scope="col">Email</th>
              <th scope="col">Message</th>
              <th scope="col">Status</th>
              <th scope="col">TicketId</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach(element => { %>
            <tr class="">
              <td scope="row"><%=element.id%></td>
              <td scope="row"><%=element.subject%></td>
              <td scope="row"><%=element.name%></td>
              <td scope="row"><%=element.date%></td>
              <td scope="row"><%=element.email%></td>
              <td scope="row"><%=element.message%></td>
              <td scope="row">
                <span
                  class="badge <%=element.isClosed ? 'bg-warning' : 'bg-success'%>"
                  ><%=element.isClosed ? 'Closed' : 'Open'%></span
                >
              </td>
              <td scope="row"><%=element.ticketId%></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
  <script>
    function downloadDB() {
      fetch("/database", {
        method: "POST",
      })
        .then((response) => {
          // Check if the response is successful
          if (!response.ok) {
            throw new Error(`HTTP error! Status: ${response.status}`);
          }
          // Parse the response as JSON
          return response.json();
        })
        .then((data) => {
          // Create a Blob with the JSON data
          const blob = new Blob([JSON.stringify(data, null, 2)], {
            type: "application/json",
          });

          // Create an <a> element to trigger the download
          const a = document.createElement("a");
          a.href = URL.createObjectURL(blob);
          a.download = "database.json";

          // Append the <a> element to the document and trigger the click event
          document.body.appendChild(a);
          a.click();

          // Remove the <a> element from the document
          document.body.removeChild(a);
        })
        .catch((error) => {
          console.error("Error downloading database:", error);
        });
    }
    const enteredPassword = prompt("Enter your password:");

    // Check if the entered password matches "Pass"
    if (enteredPassword === "Pass") {
      alert("Login successful!");
      showTicketsTable(); // Show the table after successful login
    } else {
      alert("Incorrect password. Login failed.");
      hideTicketsTable(); // Hide the table after unsuccessful login
    }

    function showTicketsTable() {
      document.getElementById("data").style.display = "block";
    }

    function hideTicketsTable() {
      document.getElementById("data").style.display = "none";
    }
  </script>
</html>
